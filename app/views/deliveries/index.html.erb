
<div class=" w-screen h-screen flex text-white bg-gray-100">
  <%= render 'shared/sidebar' %>
  <div class="w-full p-4">

    <div class="pb-4 lg:flex justify-between">
      <h1 class="text-blue-bici">Mes Livraisons</h1>
      <%= form_tag deliveries_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query], class: "rounded p-2 min-w-72 text-black mt-4 lg:mt-2", placeholder: "chercher une course" %>
        <%= submit_tag "Go !", class: "btn-bici" %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-4">

      <%= render(Delivery::IndexComponent.new(deliveries: @deliveries)) %>


    </div>

  </div>
</div>
