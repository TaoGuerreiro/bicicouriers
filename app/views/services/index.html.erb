<% content_for :meta_title, "Tout nos services de livraisons" %>
<% content_for :meta_description, "De la course express aux livraisons régulières" %>

<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "Transport urgent",
    "item": "https://www.bicicouriers.fr/services/transport-urgent"
  },{
    "@type": "ListItem",
    "position": 2,
    "name": "Equilibre des vos stocks",
    "item": "https://www.bicicouriers.fr/services/equilibre-des-vos-stocks"
  },{
    "@type": "ListItem",
    "position": 3,
    "name": "Mutualisation de vos flux de transport",
    "item": "https://www.bicicouriers.fr/services/mutualisation-de-vos-flux-de-transport"
  },{
    "@type": "ListItem",
    "position": 4,
    "name": "Privatisation de coursiers",
    "item": "https://www.bicicouriers.fr/services/privatisation-de-coursiers"
  },{
    "@type": "ListItem",
    "position": 5,
    "name": "Gestion du courrier entreprise",
    "item": "https://www.bicicouriers.fr/services/gestion-du-courrier-entreprise"
  },{
    "@type": "ListItem",
    "position": 6,
    "name": "Votre coursier sur mesure",
    "item": "https://www.bicicouriers.fr/services/votre-coursier-sur-mesure"
  }]
