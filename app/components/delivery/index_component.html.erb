<% @deliveries.each do |delivery| %>

  <div class="relative min-w-72 h-48 bg-blue-bici-dark rounded-xl p-2 hover:scale-102 transform transition cursor-pointer">

    <div class="flex mb-2"><p class="truncate font-thin text-sm"><i class="fas fa-arrow-up"></i> Départ au <span class="font-bold text-base "> <%= delivery.pickups.first.address %></span></p> </div>
    <div class="flex border-b"><p class="truncate font-thin text-sm mb-3"><i class="fas fa-arrow-down"></i> Livraison au <span class="font-bold text-base"><%= delivery.drops.first.address %></span></p> </div>
    <div class="flex justify-center mt-3"><p class="text-lg"><%= delivery.pickups.first.start_hour %> <i class="fas fa-arrows-alt-h"></i> <%= delivery.pickups.first.end_hour %></p></div>

    <div class="flex absolute left-2 bottom-2">
      <p class=" text-red-600 pr-2"><%= delivery.status %></p>
      <svg class="animate-spin my-auto h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>

    <div class="absolute right-2 bottom-10"><span class="text-xl text-yellow-bici font-semibold "></div>
    <div class="absolute right-2 bottom-2"><span class="font-bold text-yellow-bici"><%= delivery.tickets_count %> tickets</span> soit <span class="font-bold text-xl text-yellow-bici"><%= delivery.price_cents / 100.to_f %> €</span></div>
  </div>

<% end %>
